{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "declarationDir": "./lib",
    "outDir": "./lib",
    "stripInternal": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["tests/**", "src/main.ts", "src/router.ts", "src/pages/**", "src/demo/**"]
}
